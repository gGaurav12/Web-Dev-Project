<body>
  <br>
    {{#each all as |a|}}
    
    <div class="card" >
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<center><img class="card-img-top" src="{{a.sr}}"></center>
        <div class="card-body">
           <font size="5" class="card-title">Name:{{a.title}}</font><br>
